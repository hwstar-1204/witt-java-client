<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경으로 사용할 원형 모양 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/silver" />
            <size
                android:width="75dp"
                android:height="75dp" />
        </shape>
    </item>
    <!-- 테두리 선 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/Signature_Hover" />
            <size
                android:width="71dp"
                android:height="71dp" />
        </shape>
    </item>
</layer-list>