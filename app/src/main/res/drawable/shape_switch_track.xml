<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

<!-- Drop Shadow Stack -->
<item>
    <shape>
        <padding
            android:bottom="8dp"
            android:left="8dp"
            android:right="8dp"
            android:top="8dp" />

        <solid android:color="@color/transparent" />
        <corners android:radius= "14dp" />
    </shape>
</item>

<!-- Background -->
<item>
    <shape>
        <solid android:color="@color/Background_1" />

        <size
            android:height="32dp"
            android:width="170dp" />

        <corners android:radius= "14dp" />

    </shape>
</item>

</layer-list>