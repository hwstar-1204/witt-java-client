<?xml version="1.0" encoding="utf-8"?>
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- 그림자 효과를 위한 layer -->
        <item
            android:left="1dp"
            android:top="1dp"
            android:right="1dp"
            android:bottom="1dp">
            <shape android:shape="rectangle">
                <solid android:color="#9AA5B8" /> <!-- 그림자 색상 (#9AA5B8) -->
                <corners android:radius="20dp" />
            </shape>
        </item>

        <!-- 원래 shape의 배경 -->
        <item>
            <shape android:shape="rectangle">
                <stroke
                    android:width="2dp"
                    android:color="@color/white" /> <!-- 테두리 색상 (#9AA5B8) -->
                <corners android:radius="20dp" />
                <solid android:color="@color/white" /> <!-- 내부 색상 (color/white) -->
            </shape>
        </item>
    </layer-list>
