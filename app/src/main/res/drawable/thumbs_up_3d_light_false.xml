<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp" />
            <corners android:radius="20dp"/>
            <solid android:color="@color/white" />
        </shape>
    </item>

    <!-- Background -->
    <item
        android:drawable="@drawable/thumbs_up_3d_light"
        android:width="100dp"
        android:height="100dp"/>

</layer-list>
