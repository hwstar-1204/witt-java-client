<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity1"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="328dp"
                android:layout_height="26dp"
                android:text=" 헬스장을 선택해주세요."
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="88dp"
                android:layout_marginLeft="16dp">
            </TextView>

            <EditText
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#F2F5F9"
                android:hint="동명(읍,면)으로 검색(ex:서초동)"
                android:textColorHint="#9AA5B8"
                tools:ignore="TouchTargetSizeCheck">
            </EditText>

            <android.widget.Button
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/circle2"
                android:backgroundTint="#05C78C"
                android:text="현재 위치로 찾기"
                android:textColor="@color/white"
                tools:ignore="TouchTargetSizeCheck">
            </android.widget.Button>

            <android.widget.Button
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/circle4"
                android:text="부안군 부안읍 - MK헬스장"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck">
            </android.widget.Button>

            <android.widget.Button
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/circle4"
                android:text="부안군 부안읍 - 삼손휘트니스"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck">
            </android.widget.Button>

            <android.widget.Button
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/circle4"
                android:text="부안군 부안읍 - FnB 휘트니스"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck">
            </android.widget.Button>

            <android.widget.Button
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/circle4"
                android:text="부안군 부안읍 - 건강나라 헬스클럽"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:ignore="TouchTargetSizeCheck">
            </android.widget.Button>

            <android.widget.Button
                android:onClick="btnClick2"
                android:id="@+id/move2"
                android:layout_width="328dp"
                android:layout_height="56dp"
                android:text="선택하기"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="@drawable/circle2"
                android:layout_marginTop="128dp"
                android:layout_marginLeft="16dp">
            </android.widget.Button>

        </LinearLayout>

    </ScrollView>

</LinearLayout>