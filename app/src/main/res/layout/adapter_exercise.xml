<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/exerciseCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="2dp"
    app:cardCornerRadius="25dp" >

    <LinearLayout
        android:id="@+id/exerciseLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="25dp" >

                <TextView
                    android:id="@+id/exerciseCat"
                    android:layout_height="24dp"
                    android:layout_width="42dp"
                    android:padding="3dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="#000000"
                    android:textColor="#ffffff"
                    android:text="부위"
                    android:textSize="10sp"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="left"
                android:layout_marginLeft="10dp" >

                <TextView
                    android:id="@+id/exerciseName"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="운동 이름"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/exerciseDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_marginTop="4dp"
                    android:textSize="10sp"
                    android:text="-kg · -세트" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/countLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/setCount"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textColor="#000000"
                    android:text="0/N"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cardioM"
                    android:layout_width="12dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="4dp"
                    android:layout_gravity="bottom"
                    android:textColor="#000000"
                    android:text="분"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cardioLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ProgressBar
                android:id="@+id/cardioBar"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/progressbar_exercise2"
                android:max="10"
                android:progress="0"/>

            <TextView
                android:id="@+id/cardioTxt"
                android:layout_width="wrap_content"
                android:layout_height="13dp"
                android:layout_marginTop="8dp"
                android:text="00:00:00"
                android:textSize="10sp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/default_color_80"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_check_24"
                android:backgroundTint="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="완료"
                android:textSize="20sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>