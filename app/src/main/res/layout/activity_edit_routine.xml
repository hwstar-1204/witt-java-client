<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Routine.EditRoutineActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_new_24"/>

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rectangle_20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="운동을 수정해요"
            style="@style/Title"/>

        <RadioGroup
            android:id="@+id/dayOfWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="15dp"
            android:gravity="center">

            <RadioButton
                android:id="@+id/sun"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="7.5dp"
                android:background="@drawable/selector_dayofweek_button"
                android:textColor="@drawable/selector_dayofweek_text"
                android:button="@null"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="일"/>

            <RadioButton
                android:id="@+id/mon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="7.5dp"
                android:background="@drawable/selector_dayofweek_button"
                android:textColor="@drawable/selector_dayofweek_text"
                android:button="@null"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="월"/>

            <RadioButton
                android:id="@+id/tue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="7.5dp"
                android:background="@drawable/selector_dayofweek_button"
                android:button="@null"
                android:text="화"
                android:textAlignment="center"
                android:textColor="@drawable/selector_dayofweek_text"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/wed"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="7.5dp"
                android:background="@drawable/selector_dayofweek_button"
                android:textColor="@drawable/selector_dayofweek_text"
                android:button="@null"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="수"/>

            <RadioButton
                android:id="@+id/thu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="7.5dp"
                android:background="@drawable/selector_dayofweek_button"
                android:textColor="@drawable/selector_dayofweek_text"
                android:button="@null"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="목"/>

            <RadioButton
                android:id="@+id/fri"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="7.5dp"
                android:background="@drawable/selector_dayofweek_button"
                android:textColor="@drawable/selector_dayofweek_text"
                android:button="@null"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="금"/>

            <RadioButton
                android:id="@+id/sat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="7.5dp"
                android:background="@drawable/selector_dayofweek_button"
                android:textColor="@drawable/selector_dayofweek_text"
                android:button="@null"
                android:textAlignment="center"
                android:textSize="14sp"
                android:text="토"/>

        </RadioGroup>

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginVertical="6dp"
                android:text="시간대"
                style="@style/Subtitle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/morning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="6dp"
                    android:outlineSpotShadowColor="@color/Background_1"
                    app:rippleColor="@color/white"
                    app:strokeColor="@color/Orange"
                    app:strokeWidth="0dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="9dp"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="11dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/morningIcon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/baseline_brightness_5_24" />

                        <TextView
                            android:id="@+id/morningTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/Orange"
                            android:text="아침"
                            style="@style/Caption"/>

                        <TextView
                            android:id="@+id/morningDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_gravity="center_vertical"
                            android:text="오전 6시 ~ 오후 12시"
                            android:textColor="@color/Background_3"
                            style="@style/Body"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/afternoon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="6dp"
                    android:outlineSpotShadowColor="@color/Background_1"
                    app:rippleColor="@color/white"
                    app:strokeColor="@color/Yellow"
                    app:strokeWidth="0dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="9dp"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="11dp"
                        android:orientation="horizontal"
                        android:background="@drawable/rectangle_16dp"
                        android:outlineSpotShadowColor="@color/Background_1"
                        android:elevation="10dp"
                        android:gravity="left">

                        <ImageView
                            android:id="@+id/afternoonIcon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/baseline_wb_sunny_24" />

                        <TextView
                            android:id="@+id/afternoonTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/Yellow"
                            android:text="점심"
                            style="@style/Caption"/>

                        <TextView
                            android:id="@+id/afternoonDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_gravity="center_vertical"
                            android:text="오후 12시 ~ 오후 6시"
                            android:textColor="@color/Background_3"
                            style="@style/Body"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/evening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="6dp"
                    android:outlineSpotShadowColor="@color/Background_1"
                    app:rippleColor="@color/white"
                    app:strokeColor="@color/Notion"
                    app:strokeWidth="0dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="9dp"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="11dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/eveningIcon"
                            android:layout_width="22dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/baseline_brightness_3_24" />

                        <TextView
                            android:id="@+id/eveningTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/Notion"
                            android:text="저녁"
                            style="@style/Caption"/>

                        <TextView
                            android:id="@+id/eveningDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_gravity="center_vertical"
                            android:text="오후 6시 ~ 오전 12시"
                            android:textColor="@color/Background_3"
                            style="@style/Body"/>

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/dawn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="18dp"
                    android:outlineSpotShadowColor="@color/Background_1"
                    app:rippleColor="@color/white"
                    app:strokeColor="@color/Purple"
                    app:strokeWidth="0dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="9dp"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="11dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/dawnIcon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/baseline_flare_24"/>

                        <TextView
                            android:id="@+id/dawnTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/Purple"
                            android:text="새벽"
                            style="@style/Caption"/>

                        <TextView
                            android:id="@+id/dawnDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_gravity="center_vertical"
                            android:text="오전 12시 ~ 오전 6시"
                            android:textColor="@color/Background_3"
                            style="@style/Body"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginVertical="6dp"
                android:text="운동"
                style="@style/Subtitle"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:clipToPadding="false"
                tools:listitem="@layout/adapter_exercise_input"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"/>

            <LinearLayout
                android:id="@+id/addExercises"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:background="@drawable/rectangle_16dp"
                android:orientation="horizontal"
                android:outlineSpotShadowColor="@color/Body"
                android:elevation="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="운동 새로 추가하기"
                    style="@style/Body"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/ic_baseline_add_24"
                    app:tint="@color/Background_3"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/completeBtn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="48dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="58dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:background="@color/Signature"
                    android:text="수정하기"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>