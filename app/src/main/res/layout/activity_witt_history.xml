<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gwnu.witt.Profile.WittHistoryActivity"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_bottom"
        android:paddingBottom="15dp">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            app:contentInsetStart="16dp">

            <Button
                android:id="@+id/cancel_WHistory"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/baseline_arrow_back_ios_new_24"
                android:backgroundTint="@color/Background_3"
                android:layout_marginBottom="16dp"/>


            <TextView
                style="@style/Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위트내역"
                android:layout_gravity="center"/>

            <TextView
                style="@style/Status"
                android:id="@+id/listCnt"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/circle"
                android:backgroundTint="@color/white"
                android:elevation="1dp"
                android:layout_gravity="right"
                android:layout_marginRight="125dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/Background_3"
                android:textSize="15dp" />


        </androidx.appcompat.widget.Toolbar>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/black_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mainbackground"
            android:backgroundTint="@color/Background_1"
            android:layout_marginHorizontal="16dp"
            app:iconifiedByDefault="false"
            app:queryBackground="@null"
            app:queryHint="검색하기"/>

    </LinearLayout>




