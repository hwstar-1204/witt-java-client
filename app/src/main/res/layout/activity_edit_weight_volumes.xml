<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.EditWeightVolumes"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingHorizontal="16dp"
    android:paddingVertical="40dp">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:contentInsetStart="0dp">

        <ImageButton
            android:id="@+id/cancel_editbody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_arrow_back_ios_new_24"
            android:backgroundTint="@color/Background_3"/>

    </androidx.appcompat.widget.Toolbar>

<!--    <Button-->
<!--    android:id="@+id/cancel_editbody"-->
<!--        android:layout_width="24dp"-->
<!--        android:layout_height="24dp"-->
<!--        android:background="@drawable/baseline_arrow_back_ios_new_24"-->
<!--        android:backgroundTint="@color/Background_3"-->
<!--        android:layout_marginBottom="16dp"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp">

        <TextView
            style="@style/chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"
            android:text="3대 측정을 수정해요" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/reset_vol"
            style="@style/chat_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:gravity="right|top"
            android:text="초기화"
            android:textSize="14dp"
            android:textColor="@color/Subtitle" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3대 측정은 적절한 위트메이트를 찾는데 큰 도움이 되어요"
        android:fontFamily="@font/spoqa_han_sans_neo"
        android:textSize="12dp"
        android:textColor="#677489"
        android:layout_marginBottom="56dp"/>

<!--    -->

    <TableLayout
        android:id="@+id/volumes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rectangle"
        android:backgroundTint="@color/white"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/entire1">

        <TableRow
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:weightSum="3">

            <TextView
                style="@style/profile_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="스쿼트"
                android:textAlignment="center"
                android:textColor="@color/syment" />

            <TextView
                style="@style/profile_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="벤치프레스"
                android:textAlignment="center"
                android:textColor="@color/syment" />


            <TextView
                style="@style/profile_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="데드리프트"
                android:textAlignment="center"
                android:textColor="@color/syment" />
        </TableRow>

        <TableRow
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/Psqaut"
                style="@style/profile_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="60"
                android:textColor="@color/darksyment"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/Pbench"
                style="@style/profile_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="40"
                android:textColor="@color/darksyment"
                android:textAlignment="center" />


            <TextView
                android:id="@+id/Pdeadlift"
                style="@style/profile_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="55"
                android:textColor="@color/darksyment"
                android:textAlignment="center" />
        </TableRow>


    </TableLayout>

<!--    -->

<!--    <View-->
<!--        android:layout_width="50dp"-->
<!--        android:layout_height="4dp"-->
<!--        android:layout_marginTop="12dp"-->
<!--        android:background="@color/Box" />-->





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">



        <Button
            android:id="@+id/EditBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rectangle"
            android:backgroundTint="@color/Signature"
            android:layout_margin="3dp"
            android:elevation="20dp"
            android:outlineSpotShadowColor="@color/Background_1"
            android:text="수정하기"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            style="@style/Title" />


    </LinearLayout>






</LinearLayout>