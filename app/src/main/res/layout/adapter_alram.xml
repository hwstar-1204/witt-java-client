<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:paddingHorizontal="6dp"

>
<LinearLayout
    android:id="@+id/out"
    android:background="@drawable/round_line"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="6dp"
    android:padding="8dp"
    android:layout_marginHorizontal="15dp"
    android:elevation="8dp"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    >
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:elevation="6dp"
                                    app:cardCornerRadius="25dp"
                                    android:background="#F2F5F9"
                                    app:cardBackgroundColor="#F2F5F9"
                                    app:cardElevation="0dp">

                                        <ImageView
                                            android:id="@+id/CAT_IMG"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="#F2F5F9"

                                            android:src="@drawable/logo_test"
                                            app:civ_border_color="#F2F5F9"
                                            />
                                </androidx.cardview.widget.CardView>


                        </FrameLayout>
                        <TextView
                            android:id="@+id/CAT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="위트"
                            android:layout_marginLeft="8dp"
                            style="@style/Title">
                        </TextView>

                        <TextView
                            android:id="@+id/beforetime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_marginRight="16dp"
                            android:text="18:50"
                            style="@style/Caption"
                            android:layout_gravity="end"
                           ></TextView>
                </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/contents"
            android:layout_width="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:text="이형원님이 위트를 보냈어요"

            style="@style/Body"></TextView>


</LinearLayout>



</LinearLayout>

