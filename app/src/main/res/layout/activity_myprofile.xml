                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/syment"
                            android:text="체중" />


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right">

                            <TextView
                                android:id="@+id/weight"
                                style="@style/profile_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
