<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F2F5F9">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/entire1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bottom"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/Oprofile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="20dp"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    style="@style/profile_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상세 프로필"
                    android:textSize="25sp" />


            </LinearLayout>
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/myprofile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="40dp">

                    <Button
                        android:id="@+id/cancel_profile"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/baseline_arrow_back_ios_new_24"
                        android:backgroundTint="@color/Background_3"
                        android:layout_marginBottom="16dp"/>


                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="내 정보"
                        android:textSize="25sp"
                        android:layout_gravity="center"/>


                    <Button
                        android:id="@+id/PEdit"
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="#00000000"
                        android:text="수정하기"
                        android:textColor="@color/syment"
                        android:textSize="15dp"/>

                </androidx.appcompat.widget.Toolbar>

                <ImageView
                    android:id="@+id/ProfileImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="19sp"
                    android:orientation="horizontal">

                    <!--                백그라운드, 색상 등등 수정 필요-->
                    <TextView
                        android:id="@+id/gender"
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/lightgray"
                        android:text="남자"
                        android:textColor="@color/gender" />

                    <TextView
                        android:id="@+id/name"
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5sp"
                        android:text="김건우" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="@color/silver"
                    android:elevation="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/MapImg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="19dp"
                        android:src="@drawable/ic_baseline_place_24" />

                    <TextView
                        android:id="@+id/MyLocation"
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="부안군 부안읍" />

                    <TextView
                        android:id="@+id/MyHealthPlace"
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="ㆍMK헬스장"
                        android:visibility="gone"/>
                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp">

                    <TableRow android:paddingVertical="13dp">

                        <TextView
                            style="@style/profile_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="키" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/Pheight"
                            style="@style/profile_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="178cm"
                            android:textColor="@color/syment" />
                    </TableRow>

                    <TableRow android:paddingVertical="13dp">

                        <TextView
                            style="@style/profile_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="몸무게" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/Pweight"
                            style="@style/profile_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="69kg"
                            android:textColor="@color/syment" />
                    </TableRow>

                    <TableRow android:paddingVertical="13dp">

                        <TextView
                            style="@style/profile_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="위트 점수" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/WScore"
                            style="@style/profile_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="100"
                            android:textColor="@color/default_color" />

                        <TextView
                            style="@style/profile_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="점"
                            android:textColor="@color/syment" />

                    </TableRow>

                    <!--                여기까지 묶어야할 배경이 있음-->


                </TableLayout>


            </LinearLayout>


            <TableLayout
                android:id="@+id/exercise_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle"
                android:elevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/entire1">

                <TableRow
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:weightSum="3">

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="스쿼트"
                        android:textAlignment="center"
                        android:textColor="@color/darksyment" />

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="벤치프레스"
                        android:textAlignment="center"
                        android:textColor="@color/darksyment" />


                    <TextView
                        style="@style/profile_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="데드리프트"
                        android:textAlignment="center"
                        android:textColor="@color/darksyment" />
                </TableRow>

                <TableRow
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/Psqaut"
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="60"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/Pbench"
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="40"
                        android:textAlignment="center" />


                    <TextView
                        android:id="@+id/Pdeadlift"
                        style="@style/profile_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="55"
                        android:textAlignment="center" />
                </TableRow>


            </TableLayout>

            <LinearLayout
                android:id="@+id/aaa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/exercise_3">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:nestedScrollingEnabled="false" />
<!--                tools:listitem="@layout/adapter_routine"-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/evaluation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_top"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/aaa">

                <TextView
                    style="@style/profile_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp"
                    android:paddingLeft="17dp"
                    android:text="받은 평가" />

                <TextView
                    style="@style/profile_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingVertical="15dp"
                    android:text="받은 후기가 없어요"
                    android:textColor="@color/darksyment" />

            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/evaluation" />


            <LinearLayout
                android:id="@+id/Reviews_received"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="16dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/view1">

                <TextView
                    style="@style/report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="받은 후기"
                    android:textStyle="bold"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:backgroundTint="@color/Background_3"
                    android:scaleType="fitEnd"/>

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Reviews_received" />

            <TableLayout
                android:id="@+id/setting_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:elevation="5dp"
                android:paddingHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@+id/view2">




                <TableRow
                    android:id="@+id/WittHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="16dp">

                    <TextView
                        style="@style/report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="위트내역"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:backgroundTint="@color/Background_3"
                        android:scaleType="fitEnd"/>
                </TableRow>

                <TableRow
                    android:id="@+id/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="16dp">

                    <TextView
                        style="@style/report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="차단목록"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:backgroundTint="@color/Background_3"
                        android:scaleType="fitEnd"/>

                </TableRow>

                <TableRow
                    android:id="@+id/set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="16dp">

                    <TextView
                        style="@style/report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="설정"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:backgroundTint="@color/Background_3"
                        android:scaleType="fitEnd"/>

                </TableRow>

                <TableRow
                    android:id="@+id/totalRoutine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="16dp"
                    android:visibility="gone">

                    <TextView
                        style="@style/report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="루틴"
                        android:textStyle="bold"
                        android:layout_gravity="center|left"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:backgroundTint="@color/Background_3"
                        android:scaleType="fitEnd"/>

                </TableRow>

                <TableRow
                    android:id="@+id/report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="16dp"
                    android:visibility="gone">

                    <TextView
                        style="@style/report"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신고내역"
                        android:textStyle="bold"
                        android:layout_gravity="center"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:backgroundTint="@color/Background_3"
                        android:scaleType="fitEnd"/>

                </TableRow>


            </TableLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/setting_table" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/SendWitt"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/bg_gradient_white"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/WittBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="58dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/nextTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Signature"
                android:gravity="center"
                android:text="위트 보내기"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</FrameLayout>
