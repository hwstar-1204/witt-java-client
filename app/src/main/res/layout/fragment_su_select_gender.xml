<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.gwnu.witt.Sign.SUInputBodyFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_new_24"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="성별을 알려주세요"
                style="@style/Title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:text="한 번 설정한 성별은 변경할 수 없으니 신중하게 적우주세요"
                style="@style/Subtitle"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="34dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/maleCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="12dp"
                        android:outlineSpotShadowColor="@color/Background_1"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:rippleColor="@color/Blue_Toggle"
                        app:strokeColor="@color/Notion"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:id="@+id/maleImg"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="20dp"
                            android:alpha="0.2"
                            android:src="@drawable/man_3d_light" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/maleTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:outlineSpotShadowColor="@color/Background_1"
                        app:cardBackgroundColor="@color/Background_1"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="10dp">

                        <TextView
                            android:id="@+id/maleTxt"
                            style="@style/CaptionB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="7dp"
                            android:text="남자"
                            android:textColor="@color/Background_2" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/femaleCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="12dp"
                        android:outlineSpotShadowColor="@color/Background_1"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="10dp"
                        app:rippleColor="@color/Pink_Toggle"
                        app:strokeColor="@color/Caution"
                        app:strokeWidth="0dp">

                        <ImageView
                            android:id="@+id/femaleImg"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="20dp"
                            android:alpha="0.2"
                            android:src="@drawable/woman_3d_light" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/femaleTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:outlineSpotShadowColor="@color/Background_1"
                        app:cardBackgroundColor="@color/Background_1"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="10dp">

                        <TextView
                            android:id="@+id/femaleTxt"
                            style="@style/CaptionB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="12dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="7dp"
                            android:text="여자"
                            android:textColor="@color/Background_2" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/nextBtn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="@drawable/rectangle_20dp"
        android:outlineSpotShadowColor="@color/Background_1"
        android:elevation="12dp"
        android:textColor="@color/Background_2"
        android:text="설정하기"
        style="@style/Title"/>

</FrameLayout>