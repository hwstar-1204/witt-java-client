<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ProfileFragment"
    android:id="@+id/ProfileFrame">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".Activity.ProfileActivity">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_member"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:id="@+id/UserImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="center"
                        android:src="@color/white"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/UserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:letterSpacing="-0.06"
                    android:lineSpacingExtra="5sp"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/UserNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="3sp"
                    android:text="#4630844"
                    android:textColor="#aaaaaa"
                    android:textSize="12sp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


                <Button
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_baseline_edit_24" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rectangle"
                android:elevation="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/MapImg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="19dp"
                    android:src="@drawable/ic_baseline_place_24"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/MyLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:letterSpacing="-0.06"
                    android:lineSpacingExtra="4sp"
                    android:text=""
                    android:textColor="#111111"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/MyHealthPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:letterSpacing="-0.06"
                    android:lineSpacingExtra="4sp"
                    android:text="ㆍMK헬스장"
                    android:textColor="#111111"
                    android:textSize="14sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/spoqa_han_sans_neo"
                    android:letterSpacing="-0.06"
                    android:lineSpacingExtra="3sp"
                    android:text="위트거리"
                    android:textColor="#111111"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/ic_baseline_info_24" />

            </LinearLayout>


            <TextView
                android:id="@+id/MyTempreture2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:letterSpacing="-0.06"
                android:lineSpacingExtra="5sp"
                android:text=""
                android:textColor="#111111"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/MTProgresser"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="4dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/progressbar_exercise1"
                android:secondaryProgress="36" />


            <!--재운동 희망률과 응답률 큰 레이아웃-->
            <!--레이아웃 반반 비율로 맞춰야함.. marginright 임시로 해놓음-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="64dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spoqa_han_sans_neo"
                            android:letterSpacing="-0.06"
                            android:lineSpacingExtra="3sp"
                            android:text="재운동희망률"
                            android:textColor="#111111"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spoqa_han_sans_neo"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="3sp"
                            android:text="100%"
                            android:textColor="#111111"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_neo"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="3sp"
                        android:text="15명중 15명이 만족"
                        android:textColor="#aaaaaa"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spoqa_han_sans_neo"
                            android:letterSpacing="-0.06"
                            android:lineSpacingExtra="3sp"
                            android:text="응답률"
                            android:textColor="#111111"
                            android:textSize="12sp"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/spoqa_han_sans_neo"
                            android:letterSpacing="0.03"
                            android:lineSpacingExtra="3sp"
                            android:text="-%"
                            android:textColor="#111111"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_neo"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="3sp"
                        android:text="표시될 만큼 충분히 채팅하지 않았아요."
                        android:textColor="#aaaaaa"
                        android:textSize="10sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:background="#d3d3d3" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:clipToPadding="false"
                android:visibility="visible"
                app:layout_constrainedHeight="true"
                tools:listitem="@layout/adapter_exercise" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/spoqa_han_sans_neo"
                android:letterSpacing="-0.06"
                android:lineSpacingExtra="4sp"
                android:text="3대 측정"
                android:textColor="#111111"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!--3대 측정 레이아웃-->
            <LinearLayout
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="36dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/circle"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="44dp"
                        android:layout_height="13dp"
                        android:layout_marginHorizontal="27dp"
                        android:layout_marginTop="23dp"
                        android:fontFamily="@font/spoqa_han_sans_neo"
                        android:letterSpacing="-0.06"
                        android:lineSpacingExtra="3sp"
                        android:text="스쿼트"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/squat"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="27dp"
                        android:fontFamily="@font/spoqa_han_sans_neo"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="5sp"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="24dp"
                    android:layout_height="80dp" />


                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/circle"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="44dp"
                        android:layout_height="13dp"
                        android:layout_marginHorizontal="18dp"
                        android:layout_marginTop="23dp"
                        android:fontFamily="@font/spoqa_han_sans_neo"
                        android:letterSpacing="-0.06"
                        android:lineSpacingExtra="3sp"
                        android:text="벤치프레스"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/benchpress"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="27dp"
                        android:layout_marginBottom="23dp"
                        android:fontFamily="@font/spoqa_han_sans_neo"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="5sp"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <View
                    android:layout_width="24dp"
                    android:layout_height="80dp" />

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/circle"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="44dp"
                        android:layout_height="13dp"
                        android:layout_marginHorizontal="18dp"
                        android:layout_marginTop="23dp"
                        android:fontFamily="@font/spoqa_han_sans_neo"
                        android:letterSpacing="-0.06"
                        android:lineSpacingExtra="3sp"
                        android:text="데드리프트"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/deadlift"
                        android:layout_width="26dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="27dp"
                        android:fontFamily="@font/spoqa_han_sans_neo"
                        android:letterSpacing="0.03"
                        android:lineSpacingExtra="5sp"
                        android:text=""
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="5dp"
                android:background="#d3d3d3" />
            <!--받은 후기 레잉아웃-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="24dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="-0.06"
                    android:lineSpacingExtra="4sp"
                    android:text="받은 후기"
                    android:textColor="#111111"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/rectangle"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <LinearLayout
                        android:id="@+id/review1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="50dp">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_baseline_check_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/spoqa_han_sans_neo"
                            android:letterSpacing="-0.06"
                            android:lineSpacingExtra="10sp"
                            android:text="15"
                            android:textColor="#05c78c"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/spoqa_han_sans_neo"
                            android:letterSpacing="-0.06"
                            android:lineSpacingExtra="10sp"
                            android:text="친절하고 매너가 좋아요"
                            android:textColor="#111111"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/review2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="50dp">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_baseline_check_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/spoqa_han_sans_neo"
                            android:letterSpacing="-0.06"
                            android:lineSpacingExtra="10sp"
                            android:text="3"
                            android:textColor="#05c78c"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/spoqa_han_sans_neo"
                            android:letterSpacing="-0.06"
                            android:lineSpacingExtra="10sp"
                            android:text="시간 약속을 잘 지켜요"
                            android:textColor="#111111"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/review3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="50dp">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_baseline_check_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/spoqa_han_sans_neo"
                            android:letterSpacing="-0.06"
                            android:lineSpacingExtra="10sp"
                            android:text="102"
                            android:textColor="#05c78c"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/spoqa_han_sans_neo"
                            android:letterSpacing="-0.06"
                            android:lineSpacingExtra="10sp"
                            android:text="응답이 빨라요"
                            android:textColor="#111111"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/review4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="50dp">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_baseline_check_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:fontFamily="@font/spoqa_han_sans_neo"
                            android:letterSpacing="-0.06"
                            android:lineSpacingExtra="10sp"
                            android:text="1"
                            android:textColor="#05c78c"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/spoqa_han_sans_neo"
                            android:letterSpacing="-0.06"
                            android:lineSpacingExtra="10sp"
                            android:text="운동을 잘 알려줘요"
                            android:textColor="#111111"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="5dp"
                    android:background="#d3d3d3" />

                <!--위트내역,고객센터,설정 레이아웃-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_neo"
                        android:letterSpacing="-0.06"
                        android:lineSpacingExtra="4sp"
                        android:text="위트내역"
                        android:textColor="#111111"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/WittHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_arrow_forward_ios_24" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="5dp"
                    android:background="#d3d3d3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_neo"
                        android:letterSpacing="-0.06"
                        android:lineSpacingExtra="4sp"
                        android:text="고객센터"
                        android:textColor="#111111"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_arrow_forward_ios_24" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="5dp"
                    android:background="#d3d3d3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_neo"
                        android:letterSpacing="-0.06"
                        android:lineSpacingExtra="4sp"
                        android:text="설정"
                        android:textColor="#111111"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_arrow_forward_ios_24" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:layout_weight="1" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</FrameLayout>