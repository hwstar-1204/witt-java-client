<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자신을 소개해주세요"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp">
            </TextView>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/galleryPicture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/circle1" />

                <ImageView
                    android:id="@+id/gallery"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/circle2"
                    android:padding="4dp"
                    android:src="@drawable/camera_icon" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <Button
                    android:id="@+id/sex"
                    android:layout_width="47dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/shape_rounded_rectangle_primary"
                    android:text="남"
                    android:textStyle="bold"
                    android:textColor="#579EF2"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="5dp"/>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/circle5"
                    android:paddingStart="10dp"
                    android:hint="이름을 적어주세요"
                    android:textColorHint="#9AA5B8"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:text="키"
                    android:layout_marginTop="24dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="18dp"
                    android:layout_weight="1"
                    android:text="몸무게"
                    android:layout_marginTop="24dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/hight"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/circle5"
                    android:paddingStart="10dp"
                    android:hint="키                               cm"
                    android:textStyle="bold"
                    android:textColorHint="#9AA5B8"
                    android:textSize="15dp"
                    android:inputType="number"/>

                <EditText
                    android:id="@+id/weight"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/circle5"
                    android:paddingStart="10dp"
                    android:hint="몸무게                         kg"
                    android:textStyle="bold"
                    android:textColorHint="#9AA5B8"
                    android:textSize="15dp"
                    android:inputType="number"/>
            </LinearLayout>

            <Button
                android:onClick="btnClick3"
                android:id="@+id/study_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="78dp"
                android:text="설정하기"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#99A4B7"
                android:background="@drawable/disabled_button_background"/>

        </LinearLayout>
    </ScrollView>


</FrameLayout>