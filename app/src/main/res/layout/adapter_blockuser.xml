<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/adapter_date"
        style="@style/Subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="4dp"
        android:text="Date"
        android:visibility="gone"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/UserCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="20dp"
        android:outlineSpotShadowColor="@color/Background_2"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_constraintTop_toTopOf="parent" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.healthappttt.Data.CircleImageView
                    android:id="@+id/Block_Img"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/circle"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    />

                <LinearLayout
                    android:id="@+id/texts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="13dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Block_NM"
                            style="@style/BodyB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="김선보"
                            android:layout_weight="1"/>
<!--                        <View-->
<!--                            android:layout_width="0dp"-->
<!--                            android:layout_height="0dp"-->
<!--                            android:layout_weight="1"/>-->

                        <TextView
                            android:id="@+id/formatdata"
                            style="@style/Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text=""
                            android:visibility="gone"/>


                    </LinearLayout>


                    <TextView
                        style="@style/Subtitle"
                        android:id="@+id/GYM"
                        android:layout_width="240dp"
                        android:layout_height="wrap_content"
                        android:text="부안군 부안읍 MK 헬스장"
                        android:textSize="14sp"
                        android:layout_marginTop="10dp"/>

                    <!--차단목록 X, 받은후기 O-->
<!--                    <TextView-->
<!--                        android:id="@+id/Review_text"-->
<!--                        android:layout_width="240dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="친절하게 잘 알려주시고 좋으신 분"-->
<!--                        android:layout_marginTop="12dp"-->
<!--                        style="@style/Subtitle"-->
<!--                        android:textSize="14sp"-->
<!--                        android:visibility="visible"/>-->

                </LinearLayout>

                <ImageButton
                    android:id="@+id/Block_cancel"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_cancel_24"
                    android:backgroundTint="@color/Background_3"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>