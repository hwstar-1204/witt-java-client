<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.gwnu.witt.Routine.CRInputDetailFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:orientation="vertical"
        android:elevation="8dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="ooo님과"
            style="@style/Title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="위트가 어떠셨나요?"
            style="@style/Title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:text="좋은 위트 문화 형성을 위해 후기를 남겨주세요"
            style="@style/Subtitle"/>


    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/clapping_hands_3d_light"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:background="@drawable/bg_gradient_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/skipBtn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="16dp"
            android:gravity="center"
            android:background="@drawable/rectangle_20dp"
            android:outlineSpotShadowColor="@color/Background_1"
            android:elevation="12dp"
            android:text="지금은 건너뛸래요"
            style="@style/Body"/>

        <TextView
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="48dp"
            android:layout_marginHorizontal="16dp"
            android:gravity="center"
            android:background="@drawable/rectangle_green_20dp"
            android:outlineSpotShadowColor="@color/Background_1"
            android:elevation="12dp"
            android:textColor="@color/white"
            android:text="후기 보내기"
            style="@style/Title"/>

    </LinearLayout>

</FrameLayout>