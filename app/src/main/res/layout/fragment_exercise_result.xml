<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Record.ExerciseResultFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="14dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_bottom"
            android:outlineSpotShadowColor="@color/Background_2"
            android:elevation="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="운동 결과"
                style="@style/Title"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="16dp"
                android:gravity="center"
                android:paddingTop="9dp"
                android:paddingHorizontal="16dp"
                android:paddingBottom="11dp"

                android:orientation="horizontal"
                android:background="@drawable/rectangle_16dp"
                android:outlineSpotShadowColor="@color/Background_1"
                android:elevation="10dp">

                <LinearLayout
                    android:id="@+id/recordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/timeIcon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/baseline_brightness_5_24"/>

                    <TextView
                        android:id="@+id/timeTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="4dp"
                        android:text="아침"
                        style="@style/Caption"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/catRecyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="6dp"
                        android:layout_gravity="center"
                        android:paddingTop="5dp"
                        android:paddingHorizontal="12dp"
                        android:paddingBottom="7dp"
                        android:orientation="horizontal"
                        android:background="@drawable/rectangle_16dp"
                        android:outlineSpotShadowColor="@color/Background_2"
                        android:elevation="4dp">

                        <TextView
                            android:id="@+id/day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/Subtitle"
                            android:text="0000년 0월 0일 0요일"
                            style="@style/Caption"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:layout_marginHorizontal="16dp"
                        android:paddingTop="9dp"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="11dp"
                        android:orientation="horizontal"
                        android:background="@drawable/rectangle_16dp"
                        android:outlineSpotShadowColor="@color/Background_2"
                        android:elevation="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="총 세트 수"
                            style="@style/Body"/>

                        <TextView
                            android:id="@+id/set"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            style="@style/Body"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:textColor="@color/Background_3"
                            android:text="세트"
                            style="@style/Body"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="6dp"
                        android:background="@drawable/rectangle_16dp"
                        android:elevation="4dp"
                        android:orientation="horizontal"
                        android:outlineSpotShadowColor="@color/Background_2"
                        android:paddingHorizontal="16dp"
                        android:paddingTop="9dp"
                        android:paddingBottom="11dp">

                        <TextView
                            style="@style/Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="총 횟수" />

                        <TextView
                            android:id="@+id/count"
                            style="@style/Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <TextView
                            style="@style/Body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="회"
                            android:textColor="@color/Background_3" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:layout_marginHorizontal="16dp"
                        android:paddingTop="9dp"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="11dp"
                        android:orientation="horizontal"
                        android:background="@drawable/rectangle_16dp"
                        android:outlineSpotShadowColor="@color/Background_2"
                        android:elevation="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="총 볼륨"
                            style="@style/Body"/>

                        <TextView
                            android:id="@+id/volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            style="@style/Body"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:textColor="@color/Background_3"
                            android:text="kg"
                            style="@style/Body"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="14dp"
                        android:paddingTop="9dp"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="11dp"
                        android:orientation="horizontal"
                        android:background="@drawable/rectangle_16dp"
                        android:outlineSpotShadowColor="@color/Background_2"
                        android:elevation="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="총 운동 시간"
                            style="@style/Body"/>

                        <TextView
                            android:id="@+id/runTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            style="@style/Body"/>

                    </LinearLayout>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="6dp"
                    android:clipToPadding="false"
                    android:paddingBottom="300dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/adapter_exercise_list" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_gradient_background_1">

        <TextView
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="48dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@drawable/rectangle_green_20dp"
            android:outlineSpotShadowColor="@color/Background_1"
            android:elevation="12dp"
            android:textColor="@color/white"
            android:text="마치기"
            style="@style/Title"/>

    </LinearLayout>

</FrameLayout>