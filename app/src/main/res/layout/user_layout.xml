<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:context=".User.UserAdapter">
        <LinearLayout
            android:background="@drawable/round_button_white"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="15dp"
            android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_member"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:elevation="6dp"
                    app:cardCornerRadius="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="#F2F5F9"
                    app:cardBackgroundColor="#F2F5F9"
                    app:cardElevation="0dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/PRI"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F2F5F9"
                            app:civ_border_color="#F2F5F9"
                            app:civ_circle_background_color="#F2F5F9" />
                </androidx.cardview.widget.CardView>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="15dp"
                            >
                                <TextView
                                    android:id="@+id/UNE"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="조성현"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="#1B202D">
                                </TextView>

                                <TextView
                                    android:id="@+id/lastChatTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="17dp"
                                    android:gravity="right"
                                    android:layout_marginRight="16dp"
                                    android:text="18:50"
                                    android:textColor="#677489"
                                    android:textSize="12sp"
                                    android:layout_gravity="end"
                                    android:textStyle="bold"></TextView>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/lastChat"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="16dp"
                            android:text="아...헬스장이 좀 머네요"
                            android:textColor="#677489"
                            android:textSize="14sp"
                            android:layout_gravity="bottom"
                            android:textStyle="bold"></TextView>


                        </LinearLayout>

        </LinearLayout>



</LinearLayout>