<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/entire1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="20dp"
                        android:paddingLeft="17dp"
                        android:text="내 정보"
                        android:textSize="25sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/PEdit"
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="#00000000"
                        android:text="수정하기"
                        android:textColor="@color/silver"
                        android:textSize="15sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ProfileImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/circle" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="19sp"
                    android:orientation="horizontal">

                    <!--                백그라운드, 색상 등등 수정 필요-->
                    <TextView
                        android:id="@+id/gender"
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/lightgray"
                        android:text="남자"
                        android:textColor="#0080ff" />

                    <TextView
                        android:id="@+id/name"
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:text="김건우" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="@color/gray"
                    android:elevation="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/MapImg"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="19dp"
                        android:src="@drawable/ic_baseline_place_24" />

                    <TextView
                        android:id="@+id/MyLocation"
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="부안군 부안읍" />

                    <TextView
                        android:id="@+id/MyHealthPlace"
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="ㆍMK헬스장" />
                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="12dp">

                    <TableRow android:paddingVertical="13dp">

                        <TextView
                            style="@style/profile_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="키" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/Pheight"
                            style="@style/profile_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="178cm"
                            android:textColor="@color/silver" />
                    </TableRow>

                    <TableRow android:paddingVertical="13dp">

                        <TextView
                            style="@style/profile_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="몸무게" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/Pweight"
                            style="@style/profile_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="69kg"
                            android:textColor="@color/silver" />
                    </TableRow>

                    <TableRow android:paddingVertical="13dp">

                        <TextView
                            style="@style/profile_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="위트 점수" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/WScore"
                            style="@style/profile_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="100"
                            android:textColor="@color/default_color" />

                        <TextView
                            style="@style/profile_style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="점"
                            android:textColor="@color/silver" />

                    </TableRow>

                    <!--                여기까지 묶어야할 배경이 있음-->


                </TableLayout>


            </LinearLayout>


            <TableLayout
                android:id="@+id/exercise_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle"
                android:elevation="5dp"
                app:layout_constraintTop_toBottomOf="@id/entire1">

                <TableRow
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:weightSum="3">

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="스쿼트"
                        android:textAlignment="center"
                        android:textColor="@color/silver" />

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="벤치프레스"
                        android:textAlignment="center"
                        android:textColor="@color/silver" />


                    <TextView
                        style="@style/profile_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="데드리프트"
                        android:textAlignment="center"
                        android:textColor="@color/silver" />
                </TableRow>

                <TableRow
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:weightSum="3">

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="60"
                        android:textAlignment="center" />

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="40"
                        android:textAlignment="center" />


                    <TextView
                        style="@style/profile_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="55"
                        android:textAlignment="center" />
                </TableRow>


            </TableLayout>

<!--            오늘 루틴 보여주는 UI-->
<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:id="@+id/recyclerView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:overScrollMode="never"-->
<!--                android:nestedScrollingEnabled="false"-->
<!--                tools:listitem="@layout/adapter_exercise_input"/>-->

            <View
                android:id="@+id/view0"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/exercise_3" />


            <LinearLayout
                android:id="@+id/evaluation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/view0">

                <TextView
                    style="@style/profile_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="20dp"
                    android:paddingLeft="17dp"
                    android:text="받은 평가" />

                <TextView
                    style="@style/profile_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingVertical="15dp"
                    android:text="받은 후기가 없어요"
                    android:textColor="@color/silver" />


            </LinearLayout>


            <View
                android:id="@+id/view1"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/evaluation" />


            <LinearLayout
                android:id="@+id/Reviews_received"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:orientation="horizontal"
                android:paddingHorizontal="13dp"
                android:paddingVertical="24dp"
                app:layout_constraintTop_toBottomOf="@+id/view1">

                <TextView
                    style="@style/profile_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="받은 후기"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Reviews_received" />

            <TableLayout
                android:id="@+id/setting_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:elevation="5dp"
                app:layout_constraintTop_toBottomOf="@+id/view2">


                <TableRow
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="24dp">

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="위트내역"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="3" />

                    <ImageButton
                        android:id="@+id/WittHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:scaleType="fitCenter" />
                </TableRow>

                <TableRow
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="24dp">

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="루틴"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:scaleType="fitCenter" />

                </TableRow>

                <TableRow
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginVertical="24dp">

                    <TextView
                        style="@style/profile_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="신고내역"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                        android:scaleType="fitCenter" />

                </TableRow>


            </TableLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/setting_table" />


            <LinearLayout
                android:id="@+id/secession"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle"
                android:orientation="horizontal"
                android:paddingHorizontal="13dp"
                android:paddingVertical="24dp"
                app:layout_constraintTop_toBottomOf="@+id/view3">

                <TextView
                    style="@style/profile_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="탈퇴하기"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_arrow_forward_ios_24"
                    android:scaleType="fitCenter" />

            </LinearLayout>

            <View
                android:id="@+id/space"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/secession" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


    <Button
        android:id="@+id/WittBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom|center"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/default_layout"
        android:text="위트 보내기"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold">

    </Button>
</FrameLayout>
