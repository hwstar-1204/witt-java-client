<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Routine.CRSelectExerciseFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/directInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="44dp"
            android:text="직접추가"
            android:textColor="@color/Subtitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="운동을 추가해주세요"
            android:textColor="@color/Standard"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="월요일 · 오전 12:00 - 오전 12:00"
            android:textSize="12sp"
            android:textColor="@color/Subtitle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/mainbackground"
                android:backgroundTint="@color/Background_1"
                app:iconifiedByDefault="false"
                app:queryBackground="@null"
                app:queryHint="운동 검색" />


            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="24dp"
                app:tabMode="scrollable"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/black"
                app:tabIndicatorHeight="1.6dp"
                app:tabSelectedTextColor="@color/black"
                app:tabTextColor="@color/black"
                tools:ignore="SpeakableTextPresentCheck">

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/chestTab"
                    android:layout_width="64dp"
                    android:layout_height="42dp"
                    android:textAlignment="center"
                    android:text="가슴"/>
                <com.google.android.material.tabs.TabItem
                    android:id="@+id/backTab"
                    android:layout_width="64dp"
                    android:layout_height="42dp"
                    android:textAlignment="center"
                    android:text="등"/>
                <com.google.android.material.tabs.TabItem
                    android:id="@+id/shoulderTab"
                    android:layout_width="64dp"
                    android:layout_height="42dp"
                    android:textAlignment="center"
                    android:text="어깨"/>
                <com.google.android.material.tabs.TabItem
                    android:id="@+id/lowBodyTab"
                    android:layout_width="64dp"
                    android:layout_height="42dp"
                    android:textAlignment="center"
                    android:text="하체"/>
                <com.google.android.material.tabs.TabItem
                    android:id="@+id/armTab"
                    android:layout_width="128dp"
                    android:layout_height="42dp"
                    android:background="@color/Background_1"
                    android:textAlignment="center"
                    android:text="팔"/>
                <com.google.android.material.tabs.TabItem
                    android:id="@+id/absTab"
                    android:layout_width="64dp"
                    android:layout_height="42dp"
                    android:textAlignment="center"
                    android:text="복근"/>
                <com.google.android.material.tabs.TabItem
                    android:id="@+id/cardioTab"
                    android:layout_width="64dp"
                    android:layout_height="42dp"
                    android:textAlignment="center"
                    android:text="유산소"/>

            </com.google.android.material.tabs.TabLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="19dp"
            android:clipToPadding="false"
            android:paddingBottom="300dp"
            tools:listitem="@layout/adapter_exercise_list_p"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_gradient_white">

        <androidx.cardview.widget.CardView
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="58dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/nextTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Background_2"
                android:gravity="center"
                android:text="선택 완료"
                android:textColor="@color/Background_3"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>