<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubActivity3"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="328dp"
                android:layout_height="26dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="88dp"
                android:text="헬스장을 알려주세요"
                android:textColor="#1B202D"
                android:textSize="18dp"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="328dp"
                android:layout_height="18dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:text="헬스장"
                android:textColor="#677489"
                android:textSize="12dp">
            </TextView>

            <EditText
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:hint="  헬스장 이름"
                android:textColorHint="#9AA5B8"
                tools:ignore="TouchTargetSizeCheck">
            </EditText>

            <TextView
                android:layout_width="328dp"
                android:layout_height="18dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:text="헬스장 위치"
                android:textColor="#677489"
                android:textSize="12dp">
            </TextView>

            <EditText
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:hint="  동명(읍,면)으로 검색(ex. 서초동)"
                android:textColorHint="#9AA5B8"
                tools:ignore="TouchTargetSizeCheck">
            </EditText>

            <android.widget.Button
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/circle2"
                android:backgroundTint="#05C78C"
                android:text="현재 위치로 찾기"
                android:textColor="@color/white"
                android:textSize="16dp"
                tools:ignore="TouchTargetSizeCheck">
            </android.widget.Button>

            <android.widget.Button
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="28dp"
                android:background="@drawable/circle2"
                android:backgroundTint="@color/white"
                android:text="부안군 부안읍"
                tools:ignore="TouchTargetSizeCheck">
            </android.widget.Button>

            <android.widget.Button
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/circle4"
                android:backgroundTint="@color/white"
                android:text="부안군 계화면"
                tools:ignore="TouchTargetSizeCheck">
            </android.widget.Button>

            <android.widget.Button
                android:layout_width="328dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/circle4"
                android:backgroundTint="@color/white"
                android:text="부안군 동진면"
                tools:ignore="TouchTargetSizeCheck">
            </android.widget.Button>

            <android.widget.Button
                android:layout_width="328dp"
                android:layout_height="56dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="104dp"
                android:background="@drawable/circle2"
                android:backgroundTint="#05C78C"
                android:text="선택하기"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold">
            </android.widget.Button>

        </LinearLayout>

    </ScrollView>

</LinearLayout>