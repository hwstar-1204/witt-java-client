<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthAppTTT" parent='Theme.AppCompat.Light' >
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/Background_1</item>
        <item name="colorPrimary">@color/Signature</item>
        <item name="colorPrimaryVariant">@color/Signature</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->

        <item name="windowNoTitle">true</item>
        <!--        <item name="android:windowFullscreen">true</item>-->

    </style>
</resources>